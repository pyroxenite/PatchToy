# Copy this file to .env and fill in your hosted zone details
# Route 53 hosted zone ID for patchtoy.com
hostedZoneId=Z1234567890ABC

# Root domain name
zoneName=patchtoy.com

# Optional subdomain (leave blank to use apex). Example: www
siteSubdomain=www

# Backend deployment (optional)
# Set to 'true' to deploy API Gateway, Lambda, and DynamoDB
DEPLOY_BACKEND=false

# JWT secret for authentication (REQUIRED if backend is enabled)
# Generate a strong random secret: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production

# API Key requirement (optional, additional security layer)
REQUIRE_API_KEY=false
